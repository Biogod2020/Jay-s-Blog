---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Jay's Blog - Home">
	<section class="text-center py-12">
		<h1 class="text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl mb-4">
			Welcome to <span class="text-indigo-600">Jay's Blog</span>
		</h1>
		<p class="text-lg text-gray-600 max-w-2xl mx-auto">
			Exploring the frontier of technology with AI-assisted content.
		</p>
	</section>

	<section class="mt-12">
		<h2 class="text-2xl font-bold mb-6">Latest Posts</h2>
		<div class="grid gap-8 md:grid-cols-2">
			{posts.map((post) => (
				<article class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition border border-gray-100">
					<a href={`/blog/${post.slug}`}>
						<h3 class="text-xl font-bold mb-2 text-gray-900 group-hover:text-indigo-600">
							{post.data.title}
						</h3>
						<p class="text-gray-500 text-sm mb-3">
							{post.data.pubDate.toLocaleDateString('en-us', {
								year: 'numeric',
								month: 'short',
								day: 'numeric',
							})}
						</p>
						<p class="text-gray-600 line-clamp-3">
							{post.data.description}
						</p>
					</a>
				</article>
			))}
		</div>
	</section>
</Layout>
